<form method="post" action="{{ path('favourites_delete', {'id': favourite.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ favourite.id) }}">
    <button class="btn">{{'action_delete'|trans}}</button>
</form>
