{% extends 'base.html.twig' %}

{% block title %}{{'Opinion index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Opinion index'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'Content'|trans}}</th>
                <th>{{'Rating'|trans}}</th>
                <th>{{'Medicine'|trans}}</th>
                <th>{{'actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for opinion in opinions %}
            <tr>
                <td>{{ opinion.id }}</td>
                <td>{{ opinion.content }}</td>
                <td>{{ opinion.rating }}</td>
                <td>{{ opinion.medicine.name }}</td>
                <td>
                    <a href="{{ path('opinion_show', {'id': opinion.id}) }}">{{'show'|trans}}</a>
                    <a href="{{ path('opinion_edit', {'id': opinion.id}) }}">{{'edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{'no records found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
