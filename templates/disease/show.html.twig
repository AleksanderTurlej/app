{% extends 'base.html.twig' %}

{% block title %}{{'title_disease_show'|trans}}{% endblock %}

{% block body %}
    <h1>{{'title_disease_show'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ disease.id }}</td>
            </tr>

            <tr>
                <th>{{'label_name'|trans}}</th>
                <td>{{ disease.name }}</td>
            </tr>
            <tr>
                <th>{{'label_medicine'|trans}}</th>
                <td>
                    {% for user in disease.medicines %}
                        <li>{{ user.name }}</li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('disease_index') }}">{{'action_back_to_list'|trans}}</a>

    {% if app.user is defined and is_granted('ROLE_ADMIN') %}
    <a href="{{ path('disease_edit', {'id': disease.id}) }}">edit</a>
    {{ include('disease/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
