{% extends 'base.html.twig' %}

{% block title %}Disease{% endblock %}

{% block body %}
    <h1>Disease</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ disease.id }}</td>
            </tr>

            <tr>
                <th>Name</th>
                <td>{{ disease.name }}</td>
            </tr>
            <tr>
                <th>Medicine</th>
                <td>
                    {% for user in disease.medicines %}
                        <li>{{ user.name }}</li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('disease_index') }}">back to list</a>

    <a href="{{ path('disease_edit', {'id': disease.id}) }}">edit</a>

    {{ include('disease/_delete_form.html.twig') }}
{% endblock %}
