{% extends 'base.html.twig' %}

{% block title %}{{'User index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'User index'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Id'|trans}}</th>
                <th>{{'Nick'|trans}}</th>
                <th>{{'Email'|trans}}</th>
                <th>{{'Roles'|trans}}</th>
                <th>{{'Password'|trans}}</th>
                <th>{{'Actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nick }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{'show'|trans}}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{'edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{'no records found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">{{'Create new'|trans}}</a>
{% endblock %}
